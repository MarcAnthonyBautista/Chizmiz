<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inputText" >
        <item name="android:background">@drawable/input_holder</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="chat_text_style_from" >
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxWidth">230dp</item>
    </style>
    <style name="chat_text_style_me" >
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxWidth">230dp</item>
    </style>
    <style name="chat_text_container_me" >
        <item name="android:backgroundTint">@color/less_orange</item>
    </style>

    <style name="chat_text_container_all" >
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>



    <style name="button_scondary" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="dialog_style" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="recent_message_item_primary_text_style" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="recent_message_item_secondary_text_style" >
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>